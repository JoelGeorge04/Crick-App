<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title TextView -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Team"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="3dp" />

        <!-- Team 1 TextView -->
        <TextView
            android:id="@+id/team1TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:padding="20px"
            android:textStyle="bold"
            android:layout_marginTop="35dp" />

        <!-- Team 2 TextView -->
        <TextView
            android:id="@+id/team2TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:padding="20px"
            android:textStyle="bold"
            android:layout_marginTop="40dp" />

        <!-- Toss and Toss Result LinearLayout -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal">

            <!-- Toss Button -->
            <Button
                android:id="@+id/tossButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toss"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/white"
                android:padding="15dp"
                android:layout_marginEnd="10dp" />

            <!-- Toss Result TextView -->
            <TextView
                android:id="@+id/tossResultTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Toss Status"
                android:textSize="28sp"
                android:textColor="#A09C9C" />
        </LinearLayout>

        <!-- Shuffle Again Button -->
        <Button
            android:id="@+id/shuffleAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reset â†»"
            android:textSize="25sp"
            android:textColor="@color/white"
            android:backgroundTint="#A32C2828"
            android:padding="15dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal" />

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp">

            <!-- Back Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="17sp"
                android:background="@color/black"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_gravity="start" />

            <!-- Done Button -->
            <Button
                android:id="@+id/doneButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Done"
                android:layout_weight="1"
                android:layout_gravity="end" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
